<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/item_container"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/product_list_image"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_marginRight="16dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/product_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textSize="20sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_toRightOf="@id/product_list_image"
            android:text="iPhone 6S"/>

        <TextView
            android:id="@+id/product_list_manufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textSize="14sp"
            android:layout_toRightOf="@id/product_list_image"
            android:layout_below="@id/product_list_name"
            android:text="Apple"
            />

        <TextView
            android:id="@+id/product_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textSize="20sp"
            android:layout_alignBottom="@id/product_list_image"
            android:layout_alignParentRight="true"
            android:text="$699" />

    </RelativeLayout>


    <View
        android:id="@+id/product_list_selected"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        />

</LinearLayout>